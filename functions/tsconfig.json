{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "baseUrl": "src",
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    ".eslintrc.js"
  ]
  
}
